<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#010402">
    <TextView
            android:id="@+id/numberInput"
            android:layout_width="524dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="#00BCD4"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.445"/>
    <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="734dp"
            android:layout_height="260dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numberInput"
            app:layout_constraintVertical_bias="0.217">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">

            <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:minHeight="48dip"
                    android:onClick="onClick"
                    android:text="C"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonFactorial"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="!"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>
            <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="Del"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="."
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">

            <Button
                    android:id="@+id/buttonNumber1"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="1"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>


            <Button
                    android:id="@+id/buttonNumber2"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="2"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonNumber3"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="3"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="+"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>
        </TableRow>

        <TableRow
                android:layout_width="493dp"
                android:layout_height="30dp">

            <Button
                    android:id="@+id/buttonNumber4"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="4"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonNumber5"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="5"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonNumber6"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="6"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonMinus"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="-"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">

            <Button
                    android:id="@+id/buttonNumber7"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="7"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonNumber8"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="8"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonNumber9"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="9"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonMultiply"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="X"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">

            <Button
                    android:id="@+id/buttonSqrt"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="sqrt"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonNumber0"
                    android:layout_width="200dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="0"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonDivide"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="/"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonOrientation"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="P"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="normal" android:layout_height="37dp"/>
        </TableRow>

        <TableRow
                android:layout_width="388dp"
                android:layout_height="30dp"
                android:orientation="vertical">

            <Button
                    android:id="@+id/buttonMod"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="%"
                    android:textColor="#F50252"
                    android:textSize="24sp"
                    android:textStyle="bold" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonSin"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="sin x"
                    android:textColor="#F50252"
                    android:textSize="24sp" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonCos"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="cos x"
                    android:textColor="#F50252"
                    android:textSize="24sp" android:layout_height="37dp"/>

            <Button
                    android:id="@+id/buttonResult"
                    android:layout_width="180dp"
                    android:background="#000000"
                    android:onClick="onClick"
                    android:text="="
                    android:textColor="#F50252"
                    android:textSize="28sp"
                    android:textStyle="bold" android:layout_height="37dp"/>
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>